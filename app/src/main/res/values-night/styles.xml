<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="iconPadding">@dimen/padding_after_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/activity_main_text_color</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="headerTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/common_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settingsIcons">
        <item name="tint">@color/white</item>
    </style>

    <style name="backButtonStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="switchStyle">
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/blue_dark</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="blackAndWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="searchButtonsStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="searchIcons">
        <item name="tint">@color/black</item>
    </style>

    <style name="audio_player_left_border_style">
        <item name="android:layout_marginLeft">@dimen/common_padding</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="audio_player_right_border_style">
        <item name="android:layout_marginRight">@dimen/common_padding</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FAB_color">
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="like_button_style">
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="media_library_text_style">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tab_layout_style">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="tab_text_style" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottomNavigationViewStyle">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/bottom_nav_color_night</item>
        <item name="itemTextColor">@color/bottom_nav_color_night</item>
    </style>

    <style name="dialog_style" parent="">
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/search_padding_start"
        android:layout_marginTop="@dimen/search_padding_top_bot"
        android:layout_marginEnd="@dimen/search_padding_end"
        android:layout_marginBottom="@dimen/search_padding_top_bot"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trackIcon"
            android:layout_width="45dp"
            android:layout_height="45dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trackTitle"
                style="@style/headerTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/search_padding_top_bot"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/search_padding_end"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Track Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trackArtist"
                    style="@style/headerTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/search_padding_top_bot"
                    android:ellipsize="end"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/hint_size"
                    tools:text="Artist" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/search_padding_top_bot"
                    android:src="@drawable/point"
                    app:tint="?attr/colorOnSecondary" />

                <TextView
                    android:id="@+id/trackTime"
                    style="@style/headerTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/search_padding_top_bot"
                    android:ellipsize="end"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/hint_size"
                    tools:text="time" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/search_padding_end"
        android:src="@drawable/arrow_forward"
        app:tint="?attr/colorOnSecondary" />


</FrameLayout>